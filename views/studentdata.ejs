<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <%-include('../partials/nav.ejs')%>
    <h2> welcome Data page 1</h2>
    <table class="table table-hover">
        <thead>
            <tr>
        
                <th>S.NO</th>
                <th>ID</th>
                <th>Student Name</th>
                <th> Student Class</th>
                <th>Student Rollno</th>
                <th>Student Total Mark</th>
                <th>student image</th>
                <th> Action-1</th>
                <th>Action-2</th>
            </tr>
        </thead>
        <tbody>
            <%record.forEach((result,key)=>{%>
            <tr>
                <td><%=key+1%></td>
                <td><%=result.id%></td>
                <td><%=result.name%></td>
                <td><%=result.class%></td>
                <td><%=result.rollno%></td>
                <td><%=result.mark%></td>
                <td> <img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                <td><a href="studentdelete/<%=result.id%>">Delete</a></td>
                <td><a href="studentupdate/<%=result.id%>">update</a></td>
                
            </tr>
            <%})%>
            <%if(record.length==0){%>
            <tr><td colspan="7"><h4 class="text-center">No Record Found</h4></td></tr>
           <%}%>

    
        </tbody>
    </table>
</body>
</html>